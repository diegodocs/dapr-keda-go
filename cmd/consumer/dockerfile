FROM golang:1.26-alpine3.21 as builder

ARG TARGETOS
ARG TARGETARCH

# Install security updates
RUN apk --no-cache add ca-certificates && \
    apk --no-cache upgrade

WORKDIR /app

COPY go.* ./
RUN go mod download && go mod verify

COPY ./cmd/consumer  ./cmd/consumer 
RUN CGO_ENABLED=0 GOOS=linux GOOS=${TARGETOS} GOARCH=${TARGETARCH} go build -o main -v -mod=readonly -ldflags="-s -w" ./cmd/consumer 

FROM alpine:3.21

# Install security updates and ca-certificates
RUN apk --no-cache add ca-certificates && \
    apk --no-cache upgrade && \
    addgroup -g 1000 appgroup && \
    adduser -D -u 1000 -G appgroup appuser

WORKDIR /app

COPY --from=builder --chown=appuser:appgroup /app/main /app/main

# Use non-root user
USER appuser

CMD ["/app/main"]
